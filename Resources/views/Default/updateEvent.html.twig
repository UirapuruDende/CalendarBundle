{% extends 'DendeCalendarBundle::layout.html.twig' %}
{# @var \Gyman\Domain\Calendar\Event\Occurrence occurrence #}
{% block content %}
    {{ form_start(form) }}

        {% if form.method is defined %}
            {{ form_row(form.method) }}
        {% endif %}

        <div class="form-group">
            <label class="control-label required" for="update_event_title">{{ "dende_calendar.form.calendar.label"|trans }}</label>
            <p><strong>{{ occurrence.event.calendar.name }}</strong></p>
        </div>
        <div class="form-group">
            <label class="control-label required" for="update_event_title">{{ "dende_calendar.form.type.label"|trans }}</label>
            <p><strong>{{ ("dende_calendar.form.type."~occurrence.event.type.type)|trans }}</strong></p>
        </div>

        {{ form_row(form.startDate) }}
        {{ form_row(form.endDate) }}
        {{ form_row(form.title) }}
        {% if form.repetitionDays is defined %}
            {{ form_row(form.repetitionDays) }}
        {% endif %}
        {{ form_row(form.delete_event) }}

        {% if form.delete_occurrence is defined %}
            {{ form_row(form.delete_event) }}
        {% endif %}

        {{ form_rest(form) }}

        <button>{{ 'dende_calendar.form.submit_update.label'|trans }}</button>
    {{ form_end(form) }}
{% endblock content %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/dendecalendar/js/locales/bootstrap-datetimepicker.pl.js') }}"></script>
    <script src="{{ asset('bundles/dendecalendar/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('bundles/dendecalendar/js/dendeCalendar.eventForm.js') }}"></script>

    <script type="text/javascript">
        $(function(){
            $(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' href="{{ asset('bundles/dendecalendar/css/bootstrap-datetimepicker.min.css') }}" />
    <link rel='stylesheet' href="{{ asset('bundles/dendecalendar/css/dendeCalendar.eventForm.css') }}" />
{% endblock stylesheets %}

